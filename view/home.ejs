<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   <h1>URL Shortener</h1>
   <form method="POST" action="/url/create">
        <input type="url" name="RedirectUrl" placeholder="Enter URL to shorten" required>
        <button type="submit">Shorten</button>
    </form>

    
    <% if(locals.id) { %>
        <p> Shortened URL: <%= id %> <br>  <a href="http://localhost:3000/<%= id %>"> shortUrl</a> </p>
    <% } %>


 <% if (locals.uid.length) { %>
    <h2>All URLs</h2>
      <table>
        <thead>
            <tr>
                <th>Short URL</th>
                <th>Redirect URL</th>
                <th>Access Count</th>
            </tr>
        </thead>
<tbody>

  
    <% locals.uid.forEach(url => { %>
        <tr>
            <td><%= url.shortUrl %></td>
            <td><%= url.RedirectUrl %></td>
            <td><%= url.log.length %></td>
        </tr>
    <% }) %>
<% } %>

    
</tbody>

    </table> 

</body>
</html>
